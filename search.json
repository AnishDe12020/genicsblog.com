---
layout: none
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
      "content"  : "{{ post.content | replace: '"', '\"' | remove:"'" }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
  ,
  {% assign pageblacklist = "Privacy Policy,Terms and Conditions,404- Not Found,page" | split: ',' %}
  {% assign urlBlackList = "/wait" | split: ',' %}
  {% for page in site.pages %}
     {% unless page.title == blank %}
     {% unless pageblacklist contains page.title %}
     {% unless urlBlackList contains page.url %}
     {% assign urlItems = page.url | split: '/'%}
     {% assign urlItemsSize = page.url | split: '/' | size%}
     {% if urlItemsSize > 2 %}
     {% unless urlItems contains 'index.html' and urlItems contains 'page' %}
     {
        "title"    : "{{ page.title | escape }}",
        "category" : "{{ page.category }}",
        "tags"     : "{{ page.tags | join: ', ' }}",
        "url"      : "{{ site.baseurl }}{{ page.url }}",
        "date"     : "{{ page.date }}",
        "content"  : "{{ post.content | replace: '"', '\"' | remove:"'" }}"
      }{% unless forloop.last %},{% endunless %}
     {% endunless %}
     {% endif %}
     {% endunless %}
     {% endunless %}
     {% endunless %}
  {% endfor %}
  ,
  {% for author in site.authors %}
  {% assign authorData = site.data.contributors[author.author] %}
    {
      "title"    : "Posts by {{ authorData.name | escape }}",
      "url"      : "/author/{{ author.author }}",
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]