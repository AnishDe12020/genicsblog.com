group :jekyll_plugins do
  gem "jemoji"
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-postcss"
  gem "jekyll-minifier"
  gem "jekyll-archives"
  gem "jekyll-hostname"
  gem "jekyll-paginate-v2"
end

# Performance-booster for watching directories on Windows
gem "wdm", "~> 0.1.1", :platforms => [:mingw, :x64_mingw, :mswin]

